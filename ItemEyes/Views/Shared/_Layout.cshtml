<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ItemEyes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/import.css" />
    @await RenderSectionAsync("head", false) @* Allows Views to have their own dependency injections *@
    <style>
        .sidebar-link{
            margin: 1rem;
        }
    </style>
</head>
<body>
    <header>
        <nav id="sidebar" class="d-lg-block sidebar collapse navbar-collapse bg-white">
            <nav class="position-sticky">
                <a class="nav-link sidebar-link btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <span>Home</span>
                </a>
                <a class="nav-link sidebar-link btn btn-outline-primary" asp-area="" asp-controller="Items" asp-action="Index">
                    <span>Items</span>
                </a>
                <a class="nav-link sidebar-link btn btn-outline-primary" asp-area="" asp-controller="Locations" asp-action="Index">
                    <span>Locations</span>
                </a>
                <a class="nav-link sidebar-link btn btn-outline-primary" href="/api">
                    <span>API</span>
                </a>
                <a class="nav-link sidebar-link btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Privacy">
                    <span>Privacy</span>
                </a>
            </nav>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
            <div class="container-fluid">
                <div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#sidebar" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <a class="navbar-brand" href="#">
                        <img src="~/media/logo.png" height="25" alt="" loading="lazy" />
                        ItemEyes
                    </a>
                </div>

                <div class="d-flex flex-row">
                    <div class="nav-item">
                        <form class="mt-0 mx-3 inline-form d-md-block collapse">
                            <div class="input-group">
                                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
                            </div>
                        </form>
                    </div>
                    <div class="nav-item dropdown">
                        <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="~/media/admin.png" height="22"
                                 alt="" />
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Admin</a>
                            <a class="dropdown-item" href="#">Settings</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main style="margin-top: 58px">
        <div class="container">
            @RenderBody()
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - ItemEyes - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </main>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
