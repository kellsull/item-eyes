@using Microsoft.AspNetCore.Identity
@using ItemEyes.Areas.Identity.Models

@inject SignInManager<ItemEyesUser> SignInManager
@inject UserManager<ItemEyesUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div class="nav-item my-auto">
        <span>@UserManager.GetUserName(User)</span>
    </div>
    <div class="nav-item dropdown">
        <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <img src="~/media/admin.png" height="22"
                 alt="" />
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-controller="Accounts" asp-action="Logout">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </div>
    </div>
}
else
{
    <div class="nav-item dropdown">
        <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <img src="~/media/nobody.png" height="22"
                 alt="" />
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-controller="Accounts" asp-action="Login">Login</a>
        </div>
    </div>
}
